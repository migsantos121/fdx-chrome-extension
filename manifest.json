{
  "name" : "FunDz",
  "version" : "1.2.9",
  "description" : "Increase your sales with real-time funding round notifications & tools. Filter by industry, state and advanced searches.",
  "permissions": [
    "management",
    "tabs",
    "gcm",
    "storage",
    "notifications",
    "activeTab",
    "identity",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "http://app.fundz.me:8080/*",
    "http://app.fundz.me/*",
    "https://app.fundz.me/*",
    "http://app.fundz.net:8080/*",
    "http://app.fundz.net/*",
    "https://app.fundz.net/*",
    "http://34.235.221.159:8080/*",
    "http://34.235.221.159/*"    
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "48": "img/ic_48.png",
    "128": "img/ic_128.png"},
  "browser_action": {
     "default_icon": {
       "19": "img/icon_disable.png"
     },
     "default_popup": "popup.html",
     "defaultTitle": "FunDz"
  },
  "background": {
      "scripts": ["js/background.js"],
      "persistent": false
  },
  "manifest_version": 2,

  "web_accessible_resources": [
    "img/ic_48.png"
  ]
}
